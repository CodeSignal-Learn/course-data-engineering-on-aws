{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3CreateBucket",
      "Effect": "Allow",
      "Action": ["s3:CreateBucket"],
      "Resource": "*"
    },
    {
      "Sid": "S3BucketLevelAccess",
      "Effect": "Allow",
      "Action": ["s3:HeadBucket","s3:ListBucket","s3:GetBucketLocation","s3:DeleteBucket"],
      "Resource": [
        "arn:aws:s3:::my-data-lake-bucket-*",
        "arn:aws:s3:::my-data-lake-bucket-12345",
        "arn:aws:s3:::codesignal-aws-bucket"
      ]
    },
    {
      "Sid": "S3ObjectLevelAccess",
      "Effect": "Allow",
      "Action": ["s3:PutObject","s3:GetObject","s3:DeleteObject","s3:PutObjectAcl"],
      "Resource": [
        "arn:aws:s3:::my-data-lake-bucket-*/*",
        "arn:aws:s3:::my-data-lake-bucket-12345/*",
        "arn:aws:s3:::codesignal-aws-bucket/*"
      ]
    }
  ]
}

